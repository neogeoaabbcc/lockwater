/**index.wxss**/
.swiper{
	overflow:hidden;
	width:100%;
	height:360rpx;
	margin-bottom:40rpx;
}
.swiper-item{
	width:100%;
	height:360rpx;
}
.slide-image{
	width:100%;
	height:360rpx;
}

.section{
	overflow:hidden;
	display:flex;
	flex-direction:column;
	padding:0 20rpx;
	margin-bottom:40rpx;

}
.section-header{
	height:60rpx;
	line-height:60rpx;
	margin-bottom:20rpx;
}
.title{
	padding-left:20rpx;
	border-left:2px solid #eb4f38;
	font-size:36rpx;
}
.more{
	font-size:24rpx;
	color:#999;
}
.box{
	display:flex;
	width:1250rpx;
	height:240rpx;
}
.item{
	display:flex;
	flex-direction:column;
	width:240rpx;
	height:240rpx;
	margin-right:20rpx;
}
.item image{
	width:100%;
	height:200rpx;
}
.item text{
	height:48rpx;
	padding:0 10rpx;
	line-height:48rpx;
	text-align:center;
	font-size:28rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis
}


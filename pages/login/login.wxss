/* header样式 */
.header{
  width: 100%l;
  height: 90%;
}
.header_my{
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 60px;
  background-color: gainsboro;
}
.header_edit{
  font-size: 80rpx;
  color:darkgray;
  width:66rpx;
  line-height: 60px;
}
.header_background{
  margin-top: 13px;
  background-color: gainsboro;
  width: 100%;
  height:74%;
  border-radius: 5%;
}
.header_my icon{
  margin-top: 15px;
  margin-left: 6px;
}
.header_my text{
  font-weight: 700;
}
.header_my_text1{
  line-height: 60px;
  font-size:40rpx;
  color: red;
}
.header_my_text2{
  line-height: 15px;
  font-size:35rpx;
  color: black;
}
.header_line{
  width: 100%;
  height:3px;
}
.header_background picker{
  display:inline-block;
  margin-top: 20px;
  width:100%;
  height: 50px;
  border-radius: 20px;
}
.picker{
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  font-weight: 700;
}
/* footer样式 */
.footerf_btn{
  bottom:2px;
}
.footer_btn_newad{
  font-size: 50rpx;
  background-color: yellowgreen;
  color: aliceblue;
}
.footer_btn_hover{
  background-color: whitesmoke;
  color:yellowgreen;
  font-size: 50rpx;
}
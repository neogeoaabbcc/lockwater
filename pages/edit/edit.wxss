/* pages/edit/edit.wxss */
.header_input{
  width: 100%;
  height: 70%;
  background-color: gainsboro;
}
.header_input text{
  height: 30px;
  line-height: 30px;
  font-size: 40rpx;
  color:grey;
  font-weight: 700;
}
.input{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 2px;
  background-color: whitesmoke;
  height: 45px;
  border-radius: 4%;   
}
.input text{
  line-height: 45px;
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 15px;
}
.input input{
  line-height: 45px;
  height: 45px;
  width: 74%;
  background-color: whitesmoke;
}
.input_pla{
  height: 45px;
  line-height: 45px;
  font-size: 30rpx;
}
.moststree{
  width: 100%;
  height: 200px;
  display: flex;
  margin-top: 20px;
  flex-direction: column;

}
.picker{
  height: 45px;
  margin-left: 15px;
  font-size: 36rpx;
  font-weight: 700;
  line-height: 45px;
  color:grey;
}
.moststree_towel{
  width: 100%;
  display: flex;
  flex-direction: row;

}
.moststree_towel input{
  height: 30px;
  line-height: 30px;
}
.moststree_towel text{
  line-height: 30px;
}
